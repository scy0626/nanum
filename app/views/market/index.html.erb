<div class="container aaaContainer">
    <br>
    <p><strong>나눔장터</strong></p><hr>
    <div style="text-align:right;"><a href="/market/new"><button type="button">글쓰기</button></a></div>

  
	<% @market.each do |m| %>
	     <div class=container>
		     <figure>
		        <figcaption>
	            <% unless m.image.nil? %>
	            <%= image_tag m.image %> 
	            <% end %>
	            <div>
	               <h3><%= m.item %></h3>
	               	작성자 : <%=m.user.username%><br/>
	                단위 : <%= m.unit %><br/>
	                가격 : <%= m.price %><br/>
	                연락방법 : <%=m.contact%>
	                완료 여부 : <%=m.done%><br/>
	                </div>
	            </figcaption>
		     </figure>
	        <button type="button" class="btn btn-warning">
	              <a href="/market/show/<%= m.id %>"><strong>더 보기</strong></a>
	        </button>
        </div><br/>
	<% end %>
	
	<div style="text-align:center;">
      <form class="form-inline my-2 my-lg-0" action="/market/find" method="get">
          <div class="form-group">
            <select name="cate" id="exampleFormControlSelect1">
              <option value="1">제목</option>
              <option value="2">내용</option>
              <option value="3">제목+내용</option>
              <option value="4">작성자</option>
            </select>
          </div>
          
        <input name="q" class="form-control mr-sm-2" type="search" placeholder="검색" aria-label="Search">
        <button type="submit">검색</button>
      </form>
    </div>
    
</div> 



   