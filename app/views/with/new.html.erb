<div class="container">
  <br></br>
  <form action="/with/create" method="post" enctype="multipart/form-data"> 
    
    <!-- 음식 종류 -->
    <div class="form-group">
      <label for="exampleFormControlInput1">종류</label>
      <input name="input_item" type="text" class="form-control" id="exampleFormControlInput1" placeholder="뭐 시켜 먹을까?!">
    </div>
    
    <!--<input name="image" type = "file">-->
    
    <!-- 상세 내용 -->
    <div class="form-group">
      <label for="exampleFormControlTextarea1">내용</label>
      <textarea name = "input_content" class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="하고 싶은 말"></textarea>
    </div>
    
    <!-- 마감기한 -->
    <div class="form-group">
      <label for="exampleFormControlInput1">마감기한</label></label>
      <select name="input_deadline" class="form-control form-control-sm">
        <option>오전</option>
        <option>오후</option>
      </select>
      <select name="input_deadlineH" class="form-control form-control-sm">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
        <option>11</option>
        <option>12</option>
      </select>
      <select name="input_deadlineM" class="form-control form-control-sm">
        <option>00</option>
        <option>10</option>
        <option>20</option>
        <option>30</option>
        <option>40</option>
        <option>50</option>
      </select>
    </div>
    
    <!-- 모집인원 -->
    <div class="form-group">
      <label for="exampleFormControlInput1">모집인원</label></label>
      <select name="input_num" class="form-control form-control-sm">
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
      </select>
    </div>
    
    <!-- 1인당 지불할 가격 -->
    <div class="form-group">
      <label for="exampleFormControlInput1">1인당 가격</label></label>
      <input name="input_price" type="text" class="form-control" id="exampleFormControlInput1" placeholder="예) 30000원">
    </div>
    
    <!-- 연락 방법 -->
    <div class="form-group">
      <label for = "exampleFormControlInput1">연락 방법</label>
      <select name="input_contact" class="form-control form-control-sm">
        <option>카톡(개인톡/오픈채팅)</option>
        <option>문자/전화</option>
        <option>페메</option>
      </select>
      <input name="input_contactID" type="text" class="form-control" id="exampleFormControlInput1" placeholder="카톡아이디(오픈채팅방 링크) / 전화번호 / 페이스북아이디">
    </div>
    
    <!-- 모집 완료 여부 -->
    <div class="form-group">
      <label for="exampleFormControlInput1">모집 완료 여부</label></label>
      <select name="input_done" class="form-control form-control-sm">
          <option>X</option>
          <option>O</option>
      </select>
    </div>
    
     <input name="image" type="file" accept="image/*" >
       
        
    <!-- 작성 버튼 -->
    <div style="text-align:right;"><button type="submit" class="btn btn-outline-dark">작성</button></div><br>

  </form>
</div>