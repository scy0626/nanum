<div class="container aaaContainer">
    <br>
    <p><strong>빌려주기</strong></p><hr>
    <div style="text-align:right;"><a href="/borrow/new"><button type="button" >글쓰기</button></a></div>
  
	<% @borrow.each do |b| %>
	     <div class=container>
		     <figure>
		        <figcaption>
		            <% unless b.image.nil? %>
		            	<%= image_tag b.image %> 
		            <% end %>
		            
		            <div>
		               <h3><%= b.item %></h3>
		               	작성자 : <%=b.user.username%><br/>
		                대여기간 : <%= b.period %><br/>
		                가격 : <%= b.price %><br/>
		                연락방법 : <%=b.contact%><br/>
		                완료 여부 : <%=b.done%><br/>
		            </div>
	            </figcaption>
		     </figure>
		     
	         <button type="button" class="btn btn-warning"><a href="/borrow/show/<%= b.id %>"><strong>더 보기</strong></a></button>
           </div><br/>
	<% end %>
	
	
	<div style="text-align:center;">
      <form class="form-inline my-2 my-lg-0" action="/borrow/find" method="get">
          <div class="form-group">
            <select name="cate" id="exampleFormControlSelect1">
              <option value="1">제목</option>
              <option value="2">내용</option>
              <option value="3">제목+내용</option>
              <option value="4">작성자</option>
            </select>
          </div>
          
        <input name="q" class="form-control mr-sm-2" type="search" placeholder="검색" aria-label="Search">
        <button type="submit">검색</button>
      </form>
    </div>
    
</div> 



   