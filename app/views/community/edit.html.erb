<div class="container">
  <form action="/community/update/<%= @community.id %>" method="post">
    
    <p><strong><%= @community.head %></strong></p>

    
    <div class="form-group">
      <label for="exampleFormControlInput1">제목</label>
      <input name="input_title" value="<%= @community.title %>" type="text" class="form-control" id="exampleFormControlInput1" placeholder="제목을 입력하세요">
    </div>
    
    <div class="form-group">
      <label for="exampleFormControlTextarea1">내용</label>
      <textarea name = "input_content" class="form-control" id="exampleFormControlTextarea1" rows="15" placeholder="내용을 입력하세요"><%= @community.content %></textarea>
    </div>
    
    <button type="submit" class="btn btn-outline-dark">수정</button>
    
  </form>
</div>